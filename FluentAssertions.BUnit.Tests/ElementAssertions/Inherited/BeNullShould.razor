@using Xunit.Sdk
@inherits Bunit.BunitContext

@code {

    [Fact]
    public void SucceedWhenNull()
    {
        IElement e = null;

        e.Should().BeNull();
    }

    [Fact]
    public void ThrowExceptionWhenNotNull()
    {
        Action aut = () => Render(@<img src="/logo.png" alt="Logo">)
            .AsElement()
            .Should().BeNull();

        aut.Should().Throw<XunitException>();
    }
}